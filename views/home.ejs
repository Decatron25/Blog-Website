<%- include('partials/header'); -%>

<h1>Home</h1>
<p><%= homeContent %> </p>

<% posts.forEach(function(element) { %>

<h1><%= element.title %></h1>

<% const content = element.body; %>

<% if(content.length > 20) { %>
<p> <%=  content.substr(0, 20) + " ... " %><a href="/posts/<%= element._id %>">Read More</a></p>
<% } else { %>
<p> <%=  content %><a href="/posts/<%= element.title %>"> Read More</a></p>
<% } %>
<% }); %>


<%- include('partials/footer'); -%>
